@font-face {
    font-family: 'LeagueGothicRegular';
    src: url(<%= asset_path 'League_Gothic-webfont.eot' %>);
    src: url(<%= asset_path 'League_Gothic-webfont.eot?#iefix' %>) format('embedded-opentype'),
         url(<%= asset_path 'League_Gothic-webfont.woff' %>) format('woff'),
         url(<%= asset_path 'League_Gothic-webfont.ttf' %>) format('truetype'),
         url(<%= asset_path 'League_Gothic-webfont.svg#LeagueGothicRegular' %>) format('svg');
    font-weight: normal;
    font-style: normal;
}

